# Granola CLI Environment Configuration
# Copy this file to .env and update the values as needed

# Node environment
NODE_ENV=production

# Granola configuration
# Override the default config path if needed
# GRANOLA_CONFIG_PATH=/custom/path/to/supabase.json

# Docker configuration
# Path to your Granola config directory on the host
# Default: ${HOME}/Library/Application Support/Granola
# GRANOLA_HOST_CONFIG_PATH=/Users/yourname/Library/Application Support/Granola

# Container configuration
COMPOSE_PROJECT_NAME=granola-cli
DOCKER_BUILDKIT=1
COMPOSE_DOCKER_CLI_BUILD=1

# Logging level (for development)
# DEBUG=granola:*

# Security settings (production)
# Set to 'true' to enable additional security measures
ENABLE_SECURITY_OPTS=true

# Resource limits
MEMORY_LIMIT=128m
CPU_LIMIT=0.25